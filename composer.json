{
    "name": "Zerodu Framework",
    "description": "一个轻量的PHP框架",
    "authors": [
        {
            "name": "huangchao",
            "email": "huangchao@foxmail.com"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {"type": "composer", "url": "http://packagist.phpcomposer.com"},
        {"packagist": false}
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "autoload": {
        "files": [
            "system/core/Application.php",
            "system/core/Controller.php",
            "system/core/Model.php"
        ],
        "psr-4": {
            "app\\": "application/",
            "common\\": "common/",
            "config\\": "config"
        }
    }
}
